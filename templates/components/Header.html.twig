<script>
    document.addEventListener('DOMContentLoaded', function () {
        const triggers = Array.from(document.getElementsByClassName("nav-item"));

        triggers.forEach(trigger => {
            trigger.addEventListener('click', function (e) {
                e.stopPropagation();

                triggers.forEach(t => {
                    if (t !== trigger) {
                        t.classList.remove("clicked")
                    }
                });

                if (trigger.classList.contains('clicked')) {
                    trigger.classList.remove("clicked")
                } else {
                    trigger.classList.add("clicked")
                }
            });

            trigger.addEventListener('mouseover', function () {
                triggers.forEach(t => {
                    if (t !== trigger) {
                        t.classList.remove("clicked")
                    }
                });
            })
        });

        document.addEventListener('click', function () {
            triggers.forEach(t => t.classList.remove("clicked"));
        });
    });
</script>
