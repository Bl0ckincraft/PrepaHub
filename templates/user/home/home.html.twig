{% extends "user/user.base.html.twig" %}

{% block title %}Accueil{% endblock %}
{% block mainid %}home{% endblock %}

{% block main %}
    <div class="first-pane h-[100dvh] flex flex-col items-center">
        <div class="container w-full flex flex-col grow">
            <div class="mx-4 md:mx-20 max-h-[550px] my-auto flex bg-no-repeat bg-center lg:bg-right bg-contain grow z-[1]" style="background-image: url('{{ asset("images/icon.png") }}')">
                <div class="lg:mx-0 mx-auto flex flex-col items-center justify-center">
                    <twig:DoubleText :neon="true" text="PrépaLib" :lgFont="140" :smFont="63"/>
                    <twig:DoubleText :neon="true" text="La bibliothèque faite pour" :lgFont="45" :smFont="18"/>
                    <twig:DoubleText :neon="true" text="les prépas" :lgFont="45" :smFont="18"/>
                </div>
            </div>
        </div>
        <div class="bottom-0 absolute z-[1]">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" style="pointer-events: none" class="wave h-[120px] md:h-[200px]" width="100%" preserveAspectRatio="none" viewBox="0 0 1920 75">
                <defs>
                    <clipPath id="a"><rect class="a" width="1920" height="75"></rect></clipPath>
                </defs>
                <g class="b">
                    <path class="c" d="M1963,327H-105V65A2647.49,2647.49,0,0,1,431,19c217.7,3.5,239.6,30.8,470,36,297.3,6.7,367.5-36.2,642-28a2511.41,2511.41,0,0,1,420,48"></path>
                </g>
                <g class="b">
                    <path class="d" d="M-127,404H1963V44c-140.1-28-343.3-46.7-566,22-75.5,23.3-118.5,45.9-162,64-48.6,20.2-404.7,128-784,0C355.2,97.7,341.6,78.3,235,50,86.6,10.6-41.8,6.9-127,10"></path>
                </g>
                <g class="b">
                    <path class="d" d="M1979,462-155,446V106C251.8,20.2,576.6,15.9,805,30c167.4,10.3,322.3,32.9,680,56,207,13.4,378,20.3,494,24"></path>
                </g>
                <g class="b">
                    <path class="d" d="M1998,484H-243V100c445.8,26.8,794.2-4.1,1035-39,141-20.4,231.1-40.1,378-45,349.6-11.6,636.7,73.8,828,150"></path>
                </g>
            </svg>
        </div>
    </div>
    <div id="stats" class="second-pane min-h-[100dvh] px-4 flex justify-center">
        <div class="flex flex-col gap-3 py-4 my-auto">
            <div class="flex justify-center">
                <span class="text-center text-5xl font-black">Statistiques</span>
            </div>

            <div class="stats-container mx-auto my-5 flex flex-wrap flex-row max-w-[1200px] justify-center">
                <div class="w-full md:w-1/2 lg:w-1/3 p-5">
                    <div class="stat-card rounded-xl p-6 relative flex flex-col justify-center h-[200px]">
                        <p class="stat-value text-center text-4xl font-bold">{{ stats.chapters }}</p>
                        <p class="stat-label text-center text-xl font-semibold">Chapitres</p>

                        <div class="stat-icon-container absolute right-5 top-5 p-3 rounded-lg h-[48px] w-[48px] flex justify-center">
                            <i class="fa-solid fa-book text-2xl m-auto"></i>
                        </div>
                    </div>
                </div>

                <div class="w-full md:w-1/2 lg:w-1/3 p-5">
                    <div class="stat-card rounded-xl p-6 relative flex flex-col justify-center h-[200px]">
                        <p class="stat-value text-center text-4xl font-bold">{{ stats.users }}</p>
                        <p class="stat-label text-center text-xl font-semibold">Utilisateurs</p>

                        <div class="stat-icon-container absolute right-5 top-5 p-3 rounded-lg h-[48px] w-[48px] flex justify-center">
                            <i class="fa-solid fa-users text-2xl m-auto"></i>
                        </div>
                    </div>
                </div>

                <div class="w-full md:w-1/2 lg:w-1/3 p-5">
                    <div class="stat-card rounded-xl p-6 relative flex flex-col justify-center h-[200px]">
                        <p class="stat-value text-center text-4xl font-bold">{{ stats.exercises }}</p>
                        <p class="stat-label text-center text-xl font-semibold">Exercices</p>

                        <div class="stat-icon-container absolute right-5 top-5 p-3 rounded-lg h-[48px] w-[48px] flex justify-center">
                            <i class="fa-solid fa-pencil text-2xl m-auto"></i>
                        </div>
                    </div>
                </div>

                <div class="w-full md:w-1/2 lg:w-1/3 p-5">
                    <div class="stat-card rounded-xl p-6 relative flex flex-col justify-center h-[200px]">
                        <p class="stat-value text-center text-4xl font-bold">{{ stats.completed }}</p>
                        <p class="stat-label text-center text-xl font-semibold">Exercices Terminés</p>

                        <div class="stat-icon-container absolute right-5 top-5 p-3 rounded-lg h-[48px] w-[48px] flex justify-center">
                            <i class="fa-solid fa-clipboard-check text-2xl m-auto"></i>
                        </div>
                    </div>
                </div>

                <div class="w-full md:w-1/2 lg:w-1/3 p-5">
                    <div class="stat-card rounded-xl p-6 relative flex flex-col justify-center h-[200px]">
                        <p class="stat-value text-center text-4xl font-bold">{{ stats.corrected }}%</p>
                        <p class="stat-label text-center text-xl font-semibold">Exercices Corrigés</p>

                        <div class="stat-icon-container absolute right-5 top-5 p-3 rounded-lg h-[48px] w-[48px] flex justify-center">
                            <i class="fa-solid fa-book-bookmark text-2xl m-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
